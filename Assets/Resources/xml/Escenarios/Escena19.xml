          <Comprobacion>false</Comprobacion>
          <EscenaComprobacion>ninguna</EscenaComprobacion>
          <ObjetoComprobacion>Ninguno</ObjetoComprobacion>
          <Accion>false</Accion>
          <LocalizacionAccion />
        </ObjetoTiradaBase>
        <ObjetoTiradaBase>
          <TextoDescriptivo>No reconoces la disposicion de las estrellas pintadas en el lienzo, o el autor se invento su colocacion o representa un cielo que no puede ser visto desde la tierra.</TextoDescriptivo>
